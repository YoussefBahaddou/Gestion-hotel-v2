<Window x:Class="Management_Hotel.Views.Dialogs.AddEditEmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion Employé" Height="797" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <Border Background="White" 
            Margin="20" 
            CornerRadius="10" 
            Effect="{StaticResource CommonShadow}">

        <StackPanel Margin="30">
            <!-- Header -->
            <TextBlock Text="Informations de l'employé" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       Foreground="#2c3e50"
                       Margin="0,0,0,30"/>

            <!-- Form Fields -->
            <StackPanel>
                <!-- Nom -->
                <TextBlock Text="Nom" 
                           Foreground="#34495e"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="NomTextBox" 
                         Margin="0,0,0,20"/>

                <!-- Prénom -->
                <TextBlock Text="Prénom" 
                           Foreground="#34495e"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="PrenomTextBox" 
                         Margin="0,0,0,20"/>

                <!-- Email -->
                <TextBlock Text="Email" 
                           Foreground="#34495e"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="EmailTextBox" 
                         Margin="0,0,0,20"/>

                <!-- Téléphone -->
                <TextBlock Text="Téléphone" 
                           Foreground="#34495e"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="TelephoneTextBox" 
                         Margin="0,0,0,20"/>

                <!-- Mot de passe -->
                <TextBlock Text="Mot de passe" 
                           Foreground="#34495e"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="PasswordBox" 
                             Height="40"
                             Padding="10,0"
                             Margin="0,0,0,20"/>

                <!-- Rôle -->
                <TextBlock Text="Rôle" 
                           Foreground="#34495e"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <ComboBox x:Name="RoleComboBox" 
                          Height="40"
                          Padding="10,0"
                          Margin="0,0,0,30">
                    <ComboBoxItem Content="Admin"/>
                    <ComboBoxItem Content="Employee"/>
                </ComboBox>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,10,0,0">
                <Button Content="Annuler" 
                        Click="CancelButton_Click"
                        Width="120" 
                        Margin="0,0,15,0"/>
                <Button Content="Enregistrer" 
                        Click="SaveButton_Click"
                        Width="120"/>
            </StackPanel>
        </StackPanel>
    </Border>

    <Window.Resources>
        <!-- Button Styles -->
        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#e74c3c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#c0392b"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ConfirmButton" TargetType="Button">
            <Setter Property="Background" Value="#2ecc71"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#27ae60"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border CornerRadius="5" 
                                BorderThickness="1" 
                                BorderBrush="#bdc3c7">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"
                                              IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                                <ContentPresenter x:Name="ContentSite"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  IsHitTestVisible="False"
                                                  Margin="10,0,30,0"
                                                  VerticalAlignment="Center"/>
                                <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                                       Placement="Bottom"
                                       PopupAnimation="Slide">
                                    <Grid Background="White"
                                          MinWidth="{TemplateBinding ActualWidth}">
                                        <Border BorderThickness="1"
                                                BorderBrush="#bdc3c7"
                                                CornerRadius="0,0,5,5">
                                            <ScrollViewer MaxHeight="200">
                                                <StackPanel IsItemsHost="True"/>
                                            </ScrollViewer>
                                        </Border>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>
