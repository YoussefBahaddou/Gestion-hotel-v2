<Window x:Class="Management_Hotel.Views.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Luxury Hotel Management - Admin" Height="917" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Border Grid.Column="0" Background="#2c3e50">
            <StackPanel>
                <!-- Hotel Branding -->
                <StackPanel Margin="20,30,20,50">
                    <TextBlock 
                             Foreground="#3498db" 
                             FontSize="32" 
                             FontWeight="Light" 
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="HOTEL" 
                             Foreground="White" 
                             FontSize="28" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Center"
                             Margin="0,-5,0,0"/>
                    <TextBlock Text="MANAGEMENT" 
                             Foreground="#bdc3c7" 
                             FontSize="14" 
                             FontWeight="Regular" 
                             HorizontalAlignment="Center"
                             Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Navigation Menu -->
                <Button Content="Tableau de bord" 
                        Click="DashboardButton_Click" Height="77"/>

                <Button Content="Gestion des employés" 
                        Click="EmployeesButton_Click" Height="77"/>

                <Button Content="Gestion des clients" 
                        Click="ClientsButton_Click" Height="77"/>

                <Button Content="Types de chambres" 
                        Click="RoomTypesButton_Click" Height="77"/>

                <Button Content="Disponibilités" 
                        Click="AvailabilityButton_Click" Height="77"/>

                <Button Content="Réservations" 
                        Click="ReservationsButton_Click" Height="77"/>

                <Button Content="Paiements" 
                        Click="PaymentsButton_Click" Height="77"/>

                <Button Content="Rapports" 
                        Click="ReportsButton_Click" Height="77"/>

                <Button Content="Notifications" 
                        Click="NotificationsButton_Click" Height="77"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="White" Margin="20" CornerRadius="10">
            <Frame x:Name="MainContent" NavigationUIVisibility="Hidden"/>
        </Border>
    </Grid>

    <Window.Resources>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="15,5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="5"
                                Padding="20,0">
                            <ContentPresenter HorizontalAlignment="Left" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3498db"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DropShadowEffect x:Key="ShadowEffect" 
                         BlurRadius="10" 
                         Direction="270" 
                         ShadowDepth="3" 
                         Color="#1A000000"/>
    </Window.Resources>
</Window>
