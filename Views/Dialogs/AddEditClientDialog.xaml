<Window x:Class="Management_Hotel.Views.Dialogs.AddEditClientDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion Client" 
        Height="756" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <!-- Resources must be defined before they are used -->
    <Window.Resources>
        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#e74c3c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#c0392b"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ConfirmButton" TargetType="Button">
            <Setter Property="Background" Value="#2ecc71"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#27ae60"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Content -->
    <Border Background="White" 
            Margin="20,20,20,12" 
            CornerRadius="10" 
            Effect="{StaticResource CommonShadow}">

        <StackPanel Margin="30">
            <!-- Header -->
            <TextBlock Text="Informations du client" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       Foreground="#2c3e50"
                       Margin="0,0,0,30"/>

            <!-- Form Fields -->
            <TextBlock Text="Nom" 
                       Foreground="#34495e"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="NomTextBox" 
                     Margin="0,0,0,20"/>

            <TextBlock Text="Prénom" 
                       Foreground="#34495e"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="PrenomTextBox" 
                     Margin="0,0,0,20"/>

            <TextBlock Text="Email" 
                       Foreground="#34495e"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="EmailTextBox" 
                     Margin="0,0,0,20"/>

            <TextBlock Text="Téléphone" 
                       Foreground="#34495e"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="TelephoneTextBox" 
                     Margin="0,0,0,20"/>

            <TextBlock Text="Adresse" 
                       Foreground="#34495e"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="AdresseTextBox" 
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalContentAlignment="Top"
                     Padding="10"
                     Margin="0,0,0,30"/>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,10,0,0">
                <Button Content="Annuler" 
                        Click="CancelButton_Click"
                        Style="{StaticResource CancelButton}"
                        Width="120" 
                        Margin="0,0,15,0"/>
                <Button Content="Enregistrer" 
                        Click="SaveButton_Click"
                        Style="{StaticResource ConfirmButton}"
                        Width="120"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
