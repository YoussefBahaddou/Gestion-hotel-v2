<Window x:Class="Management_Hotel.Views.Dialogs.AddEditRoomTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Type de Chambre" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Détails du type de chambre" FontSize="20" Margin="0,0,0,20"/>

        <TextBlock Text="Libellé"/>
        <TextBox x:Name="LibelleTextBox" Margin="0,5,0,10"/>

        <TextBlock Text="Description"/>
        <TextBox x:Name="DescriptionTextBox" Margin="0,5,0,10" 
                 TextWrapping="Wrap" Height="60"/>

        <TextBlock Text="Capacité"/>
        <TextBox x:Name="CapaciteTextBox" Margin="0,5,0,10"/>

        <TextBlock Text="Prix par nuit"/>
        <TextBox x:Name="PrixTextBox" Margin="0,5,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annuler" Click="CancelButton_Click" 
                    Width="100" Margin="0,0,10,0"/>
            <Button Content="Enregistrer" Click="SaveButton_Click" 
                    Width="100"/>
        </StackPanel>
    </StackPanel>
</Window>
