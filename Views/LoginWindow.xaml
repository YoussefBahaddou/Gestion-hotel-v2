<Window x:Class="Management_Hotel.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotel Management - Login" Height="450" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="40">
            <TextBlock Text="Login" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBox x:Name="EmailTextBox" Margin="0,10"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,10"/>
            <Button Content="Se connecter" Click="LoginButton_Click" Margin="0,20"/>
        </StackPanel>
    </Grid>
</Window>
