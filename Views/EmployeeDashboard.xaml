<Window x:Class="Management_Hotel.Views.EmployeeDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Luxury Hotel Management - Employee" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Border Grid.Column="0" Background="#708090">
            <StackPanel>
                <!-- Hotel Branding -->
                <StackPanel Margin="20,30,20,50">
                    <TextBlock Text="LUXURY" 
                             Foreground="#ecf0f1" 
                             FontSize="32" 
                             FontWeight="Light" 
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="HOTEL" 
                             Foreground="White" 
                             FontSize="28" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Center"
                             Margin="0,-5,0,0"/>
                    <TextBlock Text="EMPLOYEE PORTAL" 
                             Foreground="#ecf0f1" 
                             FontSize="14" 
                             FontWeight="Regular" 
                             HorizontalAlignment="Center"
                             Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Navigation Menu -->
                <Button Content="Gestion des clients" 
                        Click="ClientsButton_Click"
                        Tag="&#xE77B;" Height="72"/>

                <Button Content="Disponibilités" 
                        Click="AvailabilityButton_Click"
                        Tag="&#xE8D1;" Height="72"/>

                <Button Content="Réservations" 
                        Click="ReservationsButton_Click"
                        Tag="&#xE8A7;" Height="72"/>

                <Button Content="Paiements" 
                        Click="PaymentsButton_Click"
                        Tag="&#xE8C9;" Height="72"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="White" Margin="20" CornerRadius="10">
            <Frame x:Name="MainContent" NavigationUIVisibility="Hidden"/>
        </Border>
    </Grid>

    <Window.Resources>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="15,4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#ecf0f1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="8"
                                Padding="20,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="icon" 
                                         Grid.Column="0"
                                         Text="{TemplateBinding Tag}"
                                         FontFamily="Segoe MDL2 Assets"
                                         FontSize="16"
                                         VerticalAlignment="Center"/>

                                <ContentPresenter Grid.Column="1" 
                                                HorizontalAlignment="Left" 
                                                VerticalAlignment="Center"
                                                Margin="12,0,0,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2ecc71"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="15" 
                                                        Direction="0" 
                                                        ShadowDepth="0" 
                                                        Color="#2ecc71" 
                                                        Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#27ae60"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DropShadowEffect x:Key="ShadowEffect" 
                         BlurRadius="10" 
                         Direction="270" 
                         ShadowDepth="3" 
                         Color="#1A000000"/>
    </Window.Resources>
</Window>
