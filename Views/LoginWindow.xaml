<Window x:Class="Management_Hotel.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Luxury Hotel Management" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- Left side - Hotel Image -->
        <Image Grid.Column="0" Source="pack://application:,,,/Assets/hotel-background.jpg" Stretch="UniformToFill"/>

        <!-- Right side - Login Form -->
        <Border Grid.Column="1" Background="White" Padding="40">
            <StackPanel VerticalAlignment="Center">
                <Image Source="/Assets/hotel-logo.png" Width="120" Margin="0,0,0,40"/>

                <TextBlock Text="Welcome !" 
                         FontSize="28" 
                         FontWeight="SemiBold" 
                         HorizontalAlignment="Center"
                         Margin="0,0,0,30"
                         Foreground="#2c3e50"/>

                <TextBlock Text="Login" 
                         Margin="0,0,0,8" 
                         FontSize="14"
                         Foreground="#34495e"/>

                <TextBox x:Name="EmailTextBox" 
                        Height="48"
                        Padding="10,0"
                        FontSize="14"
                        BorderThickness="1"
                        BorderBrush="#bdc3c7"
                        Margin="0,0,0,20">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <TextBlock Text="Password" 
                         Margin="0,0,0,8" 
                         FontSize="14"
                         Foreground="#34495e"/>

                <PasswordBox x:Name="PasswordBox" 
                           Height="48"
                           Padding="10,0"
                           FontSize="14"
                           BorderThickness="1"
                           BorderBrush="#bdc3c7"
                           Margin="0,0,0,30">
                    <PasswordBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </PasswordBox.Resources>
                </PasswordBox>

                <Button Content="LOGIN" 
                        Click="LoginButton_Click"
                        Height="45"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Background="#3498db"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980b9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
