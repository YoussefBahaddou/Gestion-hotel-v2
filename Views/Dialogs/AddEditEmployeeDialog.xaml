<Window x:Class="Management_Hotel.Views.Dialogs.AddEditEmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion Employé" Height="450" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Informations de l'employé" FontSize="20" Margin="0,0,0,20"/>

        <TextBlock Text="Nom"/>
        <TextBox x:Name="NomTextBox" Margin="0,5,0,10"/>

        <TextBlock Text="Prénom"/>
        <TextBox x:Name="PrenomTextBox" Margin="0,5,0,10"/>

        <TextBlock Text="Email"/>
        <TextBox x:Name="EmailTextBox" Margin="0,5,0,10"/>

        <TextBlock Text="Téléphone"/>
        <TextBox x:Name="TelephoneTextBox" Margin="0,5,0,10"/>

        <TextBlock Text="Mot de passe"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,5,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annuler" Click="CancelButton_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Enregistrer" Click="SaveButton_Click" Width="100"/>
        </StackPanel>
    </StackPanel>
</Window>
