<Window x:Class="Management_Hotel.Views.Dialogs.AddEditPaymentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des Paiements" Height="500" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Détails du paiement" FontSize="20" Margin="0,0,0,20"/>

        <TextBlock Text="Réservation"/>
        <ComboBox x:Name="ReservationComboBox" 
                  DisplayMemberPath="Idreservation"
                  SelectedValuePath="Idreservation"
                  Margin="0,5,0,10"/>

        <TextBlock Text="Montant"/>
        <TextBox x:Name="MontantTextBox" Margin="0,5,0,10"/>

        <TextBlock Text="Date du paiement"/>
        <DatePicker x:Name="DatePaiementPicker" Margin="0,5,0,10"/>

        <TextBlock Text="Mode de paiement"/>
        <ComboBox x:Name="ModePaiementComboBox" Margin="0,5,0,20">
            <ComboBoxItem Content="Carte bancaire"/>
            <ComboBoxItem Content="Espèces"/>
            <ComboBoxItem Content="Virement"/>
            <ComboBoxItem Content="Chèque"/>
        </ComboBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annuler" Click="CancelButton_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Enregistrer" Click="SaveButton_Click" Width="100"/>
        </StackPanel>
    </StackPanel>
</Window>
