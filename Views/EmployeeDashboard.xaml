<Window x:Class="Management_Hotel.Views.EmployeeDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard Employé" Height="768" Width="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar with restricted access -->
        <StackPanel Grid.Column="0" Background="#27ae60">
            <Button Content="Gestion des clients" Click="ClientsButton_Click"/>
            <Button Content="Disponibilités" Click="AvailabilityButton_Click"/>
            <Button Content="Réservations" Click="ReservationsButton_Click"/>
            <Button Content="Paiements" Click="PaymentsButton_Click"/>
        </StackPanel>

        <!-- Main Content Area -->
        <Frame Grid.Column="1" x:Name="MainContent"/>
    </Grid>
</Window>
